%h1 Listing Posts

%table
  %thead
    %tr
      %th Userid
      %th Title
      %th Description
      %th Name
      %th colspan="4">
  
  %tbody
    - @posts.each do |post|
      %tr
        %td
          = post.user_id
        %td
          = post.title
        %td
          = post.description
        %td
          = post.user.user_name
        %td
          = link_to 'Show', user_post_path(current_user, post)
        %td
          = link_to 'Edit', edit_user_post_path(current_user, post)
        %td
          = link_to 'Destroy',user_post_path(current_user, post), method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New Post', new_user_post_path(current_user)
