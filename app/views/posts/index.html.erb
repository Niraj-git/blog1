<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Title</th>
      <th>Description</th>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.user.user_name %></td>
        <td><%= link_to 'Show', user_post_path(current_user, post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(current_user, post) %></td>
        <td><%= link_to 'Destroy',user_post_path(current_user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path(current_user) %>
